include BlockLayoutLeft
include BlockLayoutRight

mixin BlockLayout(props)

	//- проверка данных получаемых из props
	include ../../shared/helpers/pug/shortcut-check-store

	//- верстка компонента
	+b(BEM('classSection'), { b: 'block-layout', m: BEM('modifier')}, 'section')
		+Container
			+Row({ bem: { gap: 'rg-30', alignItems: 'align-items-start'} })
				block
