mixin Tabs(props)
	//- проверка данных получаемых из props
	include ../../shared/helpers/pug/shortcut-check-store

	//- верстка компонента
	+b('tabs', {}, 'div')
		+e('buttons', {}, 'div')
			for item, index in DATA_ARR('tabs')
				//- проверка данных получаемых из item
				include ../../shared/helpers/pug/shortcut-check-store

				+e('button', {b: `${index === 0 ? 'js-active' : ''}`}, 'button') #{I_DATA('tabName')}

		+e('body', {}, 'div')
			for item, index in DATA_ARR('tabs')
				//- проверка данных получаемых из item
				include ../../shared/helpers/pug/shortcut-check-store
				+e('content', {b: `${index === 0 ? 'js-active' : ''}`}, 'div') #{I_DATA('tabContent')}
