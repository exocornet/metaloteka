mixin TableProductRow(props)
	//- проверка данных получаемых из props
	include ../../shared/helpers/pug/shortcut-check-store

	//- верстка компонента
	+b('table-product-row', {}, 'div')
		for item in ELEM_ARR('Text')
			//- проверка данных получаемых из props
			include ../../shared/helpers/pug/shortcut-check-store
			if item.dataArr.arrText[0].linkWrap
				+e('link', {}, 'a')(href='#')
					+Text(item)
			else
				+Text(item)
