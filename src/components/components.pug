mixin includeComponents(components)
	for component in components
		case component
			when 'ContactHeader'
				include ContactHeader/ContactHeader
		case component
			when 'ContactHeaderWarning'
				include ContactHeaderWarning/ContactHeaderWarning
		case component
			when 'ContactInformation'
				include ContactInformation/ContactInformation
		case component
			when 'ContactInformationFooter'
				include ContactInformationFooter/ContactInformationFooter
			when 'Tabs'
				include Tabs/Tabs
		case component
			when 'Card'
				include Card/Card
		case component
			when 'BlockLayout'
				include BlockLayout/BlockLayout
		case component
			when 'Accordion'
				include Accordion/Accordion
		case component
			when 'AccordionList'
				include AccordionList/AccordionList
		case component
			when 'Slider'
				include Slider/Slider
		case component
			when 'Popup'
				include Popup/Popup
		case component
			when 'TableProductRow'
				include TableProductRow/TableProductRow
		case component
			when 'Pagination'
				include Pagination/Pagination
		case component
			when 'ProductItem'
				include ProductItem/ProductItem
		case component
			when 'ProductItemDetails'
				include ProductItemDetails/ProductItemDetails
		case component
			when 'Select'
				include Select/Select
