include ../../../node_modules/bempug/index
- BEMPUG.modifier = '_';

doctype html
html
	head
		title Список страниц
		style.
			.body-list-pages {
				padding: 20px;
			}
			.h1 {
				font-size: 26px;
				margin-bottom: 20px;
			}
			.link {
				font-size: 16px;
				line-height: 1.3;
				text-decoration: none;
				color: #000000;
			}
			.link:hover {
				color: #00000080;
			}
	+b('body-list-pages', {}, 'body')
		+b('h1', {}, 'h1') Страницы сайта:
		for link, idx in listLinks
			+b('link', {}, 'a')(href=link.link target='_blank' title=link.title accesskey=`${idx + 1}`)
				| #{`${idx + 1}. ${link.name} (${link.title}.html)`}
				br
