mixin footer(section)
	//- проверка данных получаемых из section
	include ../../shared/helpers/pug/shortcut-check-store

	//- верстка секции
	+b('footer', {m: S_BEM('modFooter')}, 'footer')
		+Container
			+e('footer-icons', {}, 'div')
				//-Иконки-------------------------------------------------------------------------------------
				+e('metaloteka-icons', {}, 'div')
					+e('icons-font', {}, 'div')
						+e('logo', {}, 'img')(src=`${pathFile}${S_DATA('logoMetalotekafont')}` alt='логотип metaloteka')
						+e('title', {}, 'h3') #{S_DATA('subtitle')}
					+e('metaloteka-logo', {}, 'div')
						+e('metaloteka-logo_item', {}, 'img')(src=`${pathFile}${S_DATA('logo')}` alt='Logo')
					+e('social', {}, 'div')
						+e('social-item', {}, 'img')(src=`${pathFile}${S_DATA('logoMail')}` alt='Mail')
						+e('social-item', {}, 'img')(src=`${pathFile}${S_DATA('logoVk')}` alt='Vk')
						+e('social-item', {}, 'img')(src=`${pathFile}${S_DATA('logoTg')}` alt='Telegram')
				//-Клиентам------------------------------------------------------------------------------------
				+e('clients', {}, 'div')
					h2 #{S_DATA('titleClients')}
					for item in S_DATA_ARR('clients')
						//- проверка данных получаемых из item
						include ../../shared/helpers/pug/shortcut-check-store

						+e('item', {}, 'span') !{I_DATA('text')}
				//-Каталог-------------------------------------------------------------------------------------
				+e('catalog', {}, 'div')
					h2 #{S_DATA('titleCatalog')}

					for item in section.dataArr.catalog
						//- проверка данных получаемых из item
						include ../../shared/helpers/pug/shortcut-check-store

						+e('item', {}, 'span') !{I_DATA('text')}
				//-Контакты-------------------------------------------------------------------------------------
				+e('contacts', {}, 'div')
					+e('address', {}, 'div')
						span #{S_DATA('city')}
						span #{S_DATA('address')}
					+e('messenger', {}, 'div')
						span #{S_DATA('phoneNumber')}
						span #{S_DATA('phoneInfo')}
					+e('messenger', {}, 'div')
						span #{S_DATA('mailAddress')}
						span #{S_DATA('mailInfo')}
					+e('messenger', {}, 'div')
						span #{S_DATA('whatsappWiber')}
						span #{S_DATA('whatsappWiberInfo')}
			//-Реквизиты----------------------------------------------------------------------------------------
			+e('requesites', {}, 'div')
				+e('requesites-info', {}, 'div')
					+e('logo', {}, 'img')(src=`${pathFile}${S_DATA('iconRuble')}` alt='логотип metaloteka')
					+e('individuals', {}, 'div')
						span #{S_DATA('titleRequesites')}
						span #{S_DATA('requesitesIndividuals')}
					+e('legal-entities', {}, 'div')
						span #{S_DATA('subtitleRequesites')}
						span #{S_DATA('requesitesLegalEntities')}
				+e('sber-icons', {}, 'div')
					+e('logo-sberbank', {}, 'img')(src=`${pathFile}${S_DATA('logoSberbank')}` alt='sber')
					+e('logo-payment', {}, 'img')(src=`${pathFile}${S_DATA('logoPaymentSbr')}` alt='sber')
					+e('logo-mir', {}, 'img')(src=`${pathFile}${S_DATA('logoMir')}` alt='mir')
					+e('button-wrapper', {}, 'div')
						+e('button', {}, 'button') #{S_DATA('requesitesButton')}
			//-Информация---------------------------------------------------------------------------------------
			+e('info-metaloteka', {}, 'div')
				span #{S_DATA('infoMetaloteka')}
			//-Политика конфидициальности-----------------------------------------------------------------------
			+e('privacy-policy-wrapper', {}, 'div')
				+e('privacy-policy-info', {}, 'div')
					+e('privacy-policy', {}, 'span') #{S_DATA('privacyPolicy')}
					+e('privacy-policy-map', {}, 'span') #{S_DATA('privacyMap')}
				+e('privacy-policy-img', {}, 'div')
					+e('logo', {}, 'img')(src=`${pathFile}${S_DATA('logoMetalotekafont')}` alt='логотип metaloteka')
				+e('privacy-policy-web', {}, 'div')
					span #{S_DATA('webStudio')}
