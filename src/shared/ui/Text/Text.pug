mixin Text(props)
	//- проверка данных получаемых из props
	include ../../helpers/pug/shortcut-check-store

	//- логика компонента
	- const isElementClass = OPT('isElementClass') ? '&' : false;
	- const tag = OPT('p') ? 'p' : 'span';

	//- верстка компонента
	+b('text', {e: isElementClass, m: `${BEM('size')}.${BEM('color')}`}, tag) #{DATA('text')}
